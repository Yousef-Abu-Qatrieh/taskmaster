<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskDetails">


    <TextView
        android:id="@+id/titleTaskDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="102dp"
        android:layout_marginBottom="76dp"
        android:text="@string/title_taskDet"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/descTaskDetails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/descTaskDetails"
        android:layout_width="112dp"
        android:layout_height="145dp"
        android:layout_marginBottom="457dp"
        android:text="@string/desc_lorem"
        android:textSize="29sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTaskDetail" />

    <TextView
        android:id="@+id/taskSts"
        android:layout_width="172dp"
        android:layout_height="42dp"
        android:text="Status"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.627"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descTaskDetails"
        app:layout_constraintVertical_bias="0.416" />

    <ImageView

        app:layout_constraintTop_toBottomOf="@id/text_view_task_body"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/image_view_task_details"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        app:srcCompat="@drawable/defualte_image"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="475dp" />

</androidx.constraintlayout.widget.ConstraintLayout>